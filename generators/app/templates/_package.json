{
  "private": true,
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "start": "GULP_ENV=development gulp serve:dev",
<% if (includeReact) { -%>
    "test": "mocha test/spec",
    "build": "npm test && GULP_ENV=production gulp",
<% } else { -%>
    "test": "GULP_ENV=test gulp test",
    "build": "GULP_ENV=production gulp",
<% } -%>
    "preview": "gulp serve:dist",
    "deploy": "aws --profile myprofile s3 sync dist s3://mybucket --region myregion --delete"
  },
  "browser": {
    "fetch": "whatwg-fetch"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim"
    ]
  },
  "browserify-shim": {},
  "devDependencies": {
    "autoprefixer-core": "^5.2.0",
    "babel-core": "^5.6.18",
    "babelify": "^6.1.3",
    "browser-sync": "^2.7.12",
    "browserify": "^10.2.6",
    "browserify-shim": "^3.8.10",
    "chai": "^3.0.0",
    "chai-as-promised": "^5.1.0",
<% if (!includeReact) { -%>
    "connect": "^3.4.0",
<% } -%>
    "del": "^1.2.0",
    "eslint": "^1.3.1",
<% if (includeReact) { -%>
    "eslint-plugin-react": "^3.3.1",
<% } -%>
    "gulp": "^3.9.0",
    "gulp-cache": "^0.2.10",
    "gulp-eslint": "^1.0.0",
    "gulp-if": "^1.2.5",
    "gulp-imagemin": "^2.2.1",
    "gulp-load-plugins": "^1.0.0-rc.1",
    "gulp-minify-css": "^1.1.6",
    "gulp-plumber": "^1.0.1",
    "gulp-postcss": "^5.1.8",
    "gulp-sass": "^2.0.1",
    "gulp-size": "^1.2.1",
    "gulp-sourcemaps": "^1.5.2",
    "gulp-uglify": "^1.2.0",
    "gulp-util": "^3.0.5",
<% if (includeReact) { -%>
    "jsdom": "^3.1.2",
<% } else { -%>
    "gulp-webdriver": "^1.0.1",
<% } -%>
    "mocha": "^2.2.5",
    "postcss-flexbugs-fixes": "^1.0.0",
<% if (!includeReact) { -%>
    "selenium-standalone": "^4.6.0",
    "serve-static": "^1.10.0",
<% } -%>
    "sinon": "^1.15.4",
    "sinon-chai": "^2.8.0",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.2.3"
  },
  "dependencies": {
    "es6-promise": "^2.3.0",
    "fontfaceobserver": "^1.5.0",
<% if (includeReact) { -%>
    "react": "^0.13.3",
    "react-portal": "^0.6.0",
    "react-router": "^0.13.3",
<% } -%>
    "svg4everybody": "jonathantneal/svg4everybody",
    "whatwg-fetch": "^0.9.0"
  }
}
