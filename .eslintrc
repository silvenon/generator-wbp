{
  "root": true,
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "ecmaFeatures": {
    "modules": true
  },
  "rules": {
    "indent": [2,2],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "func-names": 0
  }
}
